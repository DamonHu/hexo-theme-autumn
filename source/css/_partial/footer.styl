.footer 
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center

  .links 
    height: 40px
    margin-top: 10px
    border-top: 1px dashed #ddd
    border-bottom: 1px dashed #ddd
    font: 700 13px Lato-Bold
    text-transform: uppercase
    letter-spacing: 1px
    ul 
      text-decoration: none
      padding: 0
      li
        display: inline-block
        &::after
          content: "\00B7"
          margin: 0 .75em
        // &:first-child::after
        //   content: "\00B7"
        //   margin: 0 .75em
        &:last-child::after 
          content: ''
        a
          color: #777
          text-decoration: none
          transition: .3s
          font-weight: 600
          &:hover
            color: #f78769
  
  .footer-power
    color: #777
    margin-top: 20px
    margin-bottom: 30px
    display: flex
    align-items: center
    a
      color:#f78769
      text-decoration: none
      // font: 700 3rem Lora-Bold
      transition: .3s
      &:hover
        color: #bbb
  

@media screen and (max-width: 1015px)
  .header
    .ipad-menu
      display: block

@media screen and (max-width: 640px) 
  .header 
    .title 
      a
        font-size: 2.5rem

    .ipad-menu
      display: none

    .mobile-menu 
      display: flex
      justify-content: space-between
      align-items: center
      .menu
        padding: .2em .5em
        font: 700 12px Lato-Bold
        outline: 3px solid #bbb

      
      
