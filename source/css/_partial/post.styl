.post
  position: relative
  text-align: center
  border-bottom: 1px dashed #ddd
  margin: 0 0 4.5em
  padding: 0 0 3em

  &:after
    content: ''
    display: block
    background: url('../../img/button.svg') no-repeat -46px top / 132px 35px
    width: 88px
    height: 35px
    position: absolute
    left: 50%
    top: 100%
    transform: translate(-50%, -18px)

  .post-title
    margin: 0 0 .5em
    &:after
      content: ""
      display: block
      margin: .5em auto
      width: 20%
      height: 2px
      background-color: #f3f3f3
    a
      font: 1.953em Lora
      text-decoration: none
      color: #777

  .post-date
    color: #bbb
    font: 14px/1.6 Lato

  .post-content
    position: relative
    color: #777
    font-size: 1rem
    line-height: 1.6
    margin-bottom: 1.5em
    text-align: left
    a.more-link
      box-shadow: inset 0 -80px 80px -5px rgba(255,255,255,.75)
      color: #f78769
      font-family: Lora-Bold
      font-weight: 700
      display: block
      width: 100%
      position: absolute
      bottom: -32px
      padding-top: 100px
      text-align: center
      text-decoration: none
      transition: .5s
      &:hover
        box-shadow: none