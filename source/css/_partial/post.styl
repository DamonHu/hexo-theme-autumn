.post
  position: relative
  text-align: center
  border-bottom: 1px dashed #ddd
  margin: 0 0 4.5em
  padding: 0 0 3em

  &::after
    content: ''
    display: block
    background: url('https://cdn.jsdelivr.net/gh/frontendsophie/hexo-theme-autumn@1.0.0/source/img/button.svg') no-repeat -46px top / 132px 35px
    width: 88px
    height: 35px
    position: absolute
    left: 50%
    top: 100%
    transform: translate(-50%, -18px)
  
  .post-cat
    display: inline-block
    margin: 0 0 5px
    &:first-of-type::after
      content: "\00B7"
      margin: 0 .75em
      color: #f78769
    &:last-of-type::after 
      content: ''
    a
      font: 700 13px Lato-Bold
      color: #f78769
      text-decoration: none
      transition: .3s
      text-transform: upperCase
      letter-spacing: 1px
      &:hover
        color: #777

  .post-title
    margin: 0 0 .5em
    font-size: 2.5rem
    color: #1a1a1a
    font-weight: 500
    font-family: 'Lora','STKaiti', 'YouYuan', 'Microsoft YaHei', 'Weibei sc'
    &::after
      content: ""
      display: block
      margin: .5em auto
      width: 20%
      height: 2px
      background-color: #f3f3f3  
    a
      color: #1a1a1a
      text-decoration: none    

  .post-date
    padding: 0
    list-style: none
    color: #bbb
    font: 14px/1.6 Lato
    li 
      display: inline-block
      &:first-child::after
        content: "\00B7"
        margin: 0 .75em
  .post-cover
    position: relative
    user-select: none
    &:after
      position: absolute
      content: ''
      width: 82%
      height: 100%
      top: 0
      left: 50%
      transform: translateX(-50%)
      box-shadow:0 0 40px 10px #ffffff inset
    img
      max-width: 80%
      border-radius: 10px

  .post-content
    position: relative
    color: #404040
    font-size: 1.02rem
    line-height: 1.6
    margin-bottom: 1.5em
    text-align: left
    font-family: -apple-system,BlinkMacSystemFont,'Helvetica Neue',  'YouYuan','Lora', 'Microsoft YaHei', 'SimHei'
    a.more-link
      box-shadow: inset 0 -80px 80px -5px rgba(255,255,255,.75)
      color: #f78769
      font-family: Lora-Bold
      font-weight: 700
      display: block
      width: 100%
      position: absolute
      bottom: -32px
      padding-top: 100px
      text-align: center
      text-decoration: none
      transition: .5s
      &:hover
        box-shadow: none
    img
      max-width: 100%
      border-radius: 4px
    blockquote
      border-left: 4px solid var(--theme-color,#42b983)
      color: #858585
      margin: 2em 0
      padding-left: 20px
      background-color: #f8f8f8
      padding-top: 0.2em
      padding-bottom: 0.2em
      word-break: break-all
    a
      color: var(--theme-color,#f78769)
      font-weight: 600
    h2
      color: #333
      background: linear-gradient(to bottom,transparent 60%,rgba(247,135,105,0.6) 0) no-repeat
      width: auto
      display: table
    h3
      color: #525252
    .highlight
      background-color: #f8f8f8
      margin-left: 0
    .gutter
      background-color: #BDBDBD
      color: #fff
      padding-right: 0.2em
      padding-left: 0.2em
    .code
      padding-left: 0.6em
    li 
      line-height: 1.8
    

