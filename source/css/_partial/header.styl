.header 
  text-align: center
  h1, h2 
    margin: 0
    line-height: 1.2
  .title 
    a
      color:#f78769
      text-decoration: none
      font: 700 3.5rem Lora-Bold
      transition: .3s
      &:hover
        color: #bbb
    
  .desc
      margin:.5em 0 .25em
      font: 18px Lora
      color: #bbb

  p 
    height: 40px
    margin: 2.25em auto 4.5em
    border-top: 1px dashed #ddd
    border-bottom: 1px dashed #ddd
    font: 700 13px/40px Lato-Bold
    text-transform: uppercase
    letter-spacing: 1px
    a
      color: #777
      text-decoration: none
      transition: .3s
      &:hover
        color: #f78769