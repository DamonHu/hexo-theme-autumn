<!DOCTYPE html>
<html>
<%- partial('_partial/head', {}, {cache: true}) %>

<body style="background: <%- theme.background %>">
    <div class="container">
        <%- partial('_partial/header') %>
        <% if (is_home() || theme.postWidget) { %>
            <main class="main">
                <%- body %>
            </main>
            <aside class="aside">
                <div class="close"></div>
                <section class="aside-section">
                    <%- partial('_widget/category', {}, {cache: true}) %>
                </section>
                <section class="aside-section">
                    <%- partial('_widget/archive', {}, {cache: true}) %>
                </section>
                <section class="aside-section tag">
                    <%- partial('_widget/tag', {}, {cache: true}) %>
                </section>
            </aside>
        <% } else { %>
            <main class="main-page">
                <%- body %>
            </main>
        <% } %>
    </div>
    <%- partial('_partial/footer', {}, {cache: true}) %>
</body>
</html>